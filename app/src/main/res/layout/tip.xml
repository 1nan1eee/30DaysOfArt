<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3ECFF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tip_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="День"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:fontFamily="@font/comic"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tip_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Название совета"
            android:textColor="#9B81D7"
            android:fontFamily="@font/comic"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/tip_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tip_description_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Краткое описание совета"
            android:textColor="#673AB7"
            android:textSize="17sp"
            android:fontFamily="@font/comic"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tip_description_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Длинное описание совета"
            android:textColor="#673AB7"
            android:fontFamily="@font/comic"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
